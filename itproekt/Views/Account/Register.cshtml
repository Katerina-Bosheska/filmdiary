@model itproekt.ViewModels.RegisterViewModel;

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="content">

        <div id="signup-form">

            <h3 style="padding-bottom: 30px">Create Account</h3>

            @using (@Html.BeginForm("Register", "Account")) { 

                <div class="form-group pt-3 ml-5 w-50">
                    @Html.ValidationSummary()
                </div>

                <div class="form-group pt-3 ml-5 w-50">
                    <label><i class="fa fa-envelope mt-3"></i></label>
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Your e-mail address" })
                </div>

                <div class="form-group pt-3 ml-5 w-50">
                    <label><i class="fa fa-user mt-3"></i></label>
                    @Html.TextBoxFor(m => m.Username, new { placeholder = "Your username" })
                </div>

                <div class="form-group pt-3 ml-5 w-50">
                    <label><i class="fa fa-lock mt-3"></i></label>
                    @Html.TextBoxFor(m => m.Password, new { placeholder = "Your password", type = "password" })
                </div>

                <div class="form-group pt-3 ml-5 w-50">
                    <label><i class="fa fa-lock mt-3"></i></label>
                    @Html.TextBoxFor(m => m.ConfirmPassword, new { placeholder = "Confirm password",  type = "password" })
                </div>

                <button type="submit" class="btn" id="signup-btn">Sign up</button>
            }
        </div>

    </div>

  