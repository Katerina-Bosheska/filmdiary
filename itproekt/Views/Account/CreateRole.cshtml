@model itproekt.ViewModels.CreateRoleViewModel;

@{
    ViewData["Title"] = "Create role";
    Layout = "~/Views/Shared/Menu.cshtml";
}

    <div class="content">

        <div id="signup-form">

            <h3 style="padding-bottom: 30px">Create a Role</h3>

            @using (@Html.BeginForm("CreateRole", "Account")) {

                <div class="form-group pt-3 ml-5 w-50">
                    @Html.TextBoxFor(m => m.RoleName, new { placeholder = "Rolename" })
                </div>

                <div class="form-group pt-3 ml-5 w-50">
                    @Html.ValidationMessageFor(m => m.RoleName, "", new { style = "color:red; padding-top:5px;" })
                </div>

                <button type="submit" class="btn" id="signup-btn">Submit</button>
            }
        </div>

    </div>
