@model itproekt.Models.Movie;

@{
    ViewData["Title"] = "Create movie";
    Layout = "~/Views/Shared/Menu.cshtml";
}

    <div class="content">

        <div id="signup-form">

            <h3 style="padding-bottom: 30px">Create Movie</h3>

            @using (@Html.BeginForm("CreateMovie", "Movie")) {

                <div class="form-group pt-3 ml-5 w-50">
                    @Html.TextBoxFor(m => m.Title, new { placeholder = "Title" })
                </div>

                <div class="form-group pt-3 ml-5 w-50">
                    @Html.TextBoxFor(m => m.Poster, new { placeholder = "Poster" })
                </div>

                <div class="form-group pt-3 ml-5 w-50">
                    @Html.TextBoxFor(m => m.Description, new { placeholder = "Description" })
                </div>

                <div class="form-group pt-3 ml-5 w-50">
                    @Html.TextBoxFor(m => m.Year, new { placeholder = "Year" })
                </div>

                <div class="form-group pt-3 ml-5 w-50">
                    @Html.TextBoxFor(m => m.Director, new { placeholder = "Director" })
                </div>

                <div class="form-group pt-3 ml-5 w-50">
                    @Html.TextBoxFor(m => m.Cast, new { placeholder = "Cast" })
                </div>

                <div class="form-group pt-3 ml-5 w-50">
                    @Html.TextBoxFor(m => m.Genre, new { placeholder = "Genre" })
                </div>

                <div class="form-group pt-3 ml-5 w-50">
                    @Html.TextBoxFor(m => m.Rating, new { placeholder = "Rating" })
                </div>

                <div class="form-group pt-3 ml-5 w-50">
                    @Html.ValidationMessageFor(m => m.Title, "", new { style = "color:red; padding-top:5px;" })
                </div>

                <button type="submit" class="btn" id="signup-btn">SUBMIT</button>
            }
        </div>

    </div>
